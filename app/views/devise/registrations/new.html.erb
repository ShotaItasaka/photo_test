<h2>会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<table>
 <tr>
  <td class="field"><%= f.label :お名前 %></td>
  <td>姓：<%= f.text_field :last_name, autofocus: true ,:placeholder =>"山田"%></td>
  <td>名：<%= f.text_field :first_name, autofocus: true,:placeholder =>"太郎" %>（全角）</td>
 </tr>

 <tr>
  <td class="field"><%= f.label :お名前（フリガナ） %></td>
  <td>セイ：<%= f.text_field :last_name_kana, autofocus: true, :placeholder =>"ヤマダ" %></td>
  <td>メイ：<%= f.text_field :first_name_kana, autofocus: true, :placeholder =>"タロウ" %>（全角）</td>
 </tr>

 <tr>
  <td class="field"><%= f.label :郵便番号 %></td>
  <td><%= f.text_field :postcode, autofocus: true , :placeholder =>"1234567" %></td>
 </tr>

 <tr>
  <td class="field"><%= f.label :住所 %></td>
  <td><%= f.text_field :address, autofocus: true, :placeholder =>"" %></td>
 </tr>

 <tr>
  <td class="field"><%= f.label :電話番号 %></td>
  <td><%= f.text_field :telephone_number, autofocus: true, :placeholder =>"090XXXXXXXX" %></td>
 </tr>

<tr>
  <td class="field"><%= f.label :メールアドレス %></td>
  <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
</tr>

<tr>
  <td class="field"><%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %></td>
    <td><%= f.password_field :password, autocomplete: "new-password" %></td>
</tr>

<tr>
  <td class="field"><%= f.label :パスワード再入力 %></td>
  <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
</div>
</tr>

<td class="actions">
  <%= f.submit "登録" %>
</td>
</table>
<% end %>

<h3>すでにアカウントをお持ちの方</h3>
<%= render "devise/shared/links" %>
